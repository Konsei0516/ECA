<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stats__count">
      <%= @user.followings.count %>
      following
    </strong>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stats__count">
      <%= @user.followers.count %>
      followers
    </strong>
  </a>
</div>