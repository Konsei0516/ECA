<h1>マイページ</h1>
<% if @user == current_user %>
  <p>名前 :<%= current_user.name %></p>
  <p>メールアドレス : <%= @user.email %></p>
  <p>プロフィール : <%= @user.profile %></p>
  <%= render 'relationships/follow_button', user: @user %>
<% else %>
  <p>名前 :<%= @user.name %></p>
  <p>メールアドレス : <%= @user.email %></p>
  <p>プロフィール : <%= @user.profile %></p>
  <%= render 'relationships/follow_button', user: @user %>
<% end %>

