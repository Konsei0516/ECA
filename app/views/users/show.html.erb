<% if current_user.id == @user.id %>
<div class="main__user">
  <div class="main__user__top">
    <h2 class = "main__user__top__mypage">マイページ</h2>
    <p class="main__user__top__name">name :<%= current_user.name %></p>
    <p class="main__user__top__profile">profile : <%= current_user.profile %></p>
    <%= render 'follow_form', class: "follow_form"%>
    <%= render 'stats', class: "follow_stats" %>
  </div>
</div>
<% else %>
<div class="main__user">
  <p class="main__user__top__name">名前 :<%= @user.name %></p>
  <p class="main__user__top__profile">プロフィール : <%= @user.profile %></p>
  <%= render 'follow_form' %>
  <%= render 'stats' %>
</div>
<% end %>


<div class="main__word">
  <h2>word memory</h2>
  <%= render partial: "words/my-index", locals: { word: @word }%>
</div>