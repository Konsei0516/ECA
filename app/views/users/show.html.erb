<%= render 'link/header'%>
<% if current_user.id == @user.id %>
<div class="main__user">
  <div class="main__user__top">
    <h2 class = "main__user__top__mypage">＜ マイページ ＞</h2>
    <div class="main__user__top__image">
      <% if @user.image? %>
        <div class="main__user__top__image__box"><%= image_tag @user.image.url %></div>
      <% else %>
        <%= image_tag("no-image.png") %>
      <% end %>
    </div>
    <p class="main__user__top__name">name: <%= current_user.name %>
    <%= link_to edit_user_path(@user),class: "main__user__top__edit" do%>
      <%= fa_icon("edit") %>
    <% end %>
    </p>
    <p class="main__user__top__profile">profile<br/> <%= current_user.profile %></p>
    <p class="main__user__top__like"><%= link_to("いいね", "/users/#{@user.id}/like") %></p>
    <%= render 'follow_form', class: "follow_form"%>
    <%= render 'stats', class: "follow_stats" %>
  </div>
</div>
<% else %>
<div class="main__user">
  <div class="main__user__top__image">
    <% if @user.image? %>
      <div class="main__user__top__image__box"><%= image_tag @user.image.url %></div>
    <% else %>
      <%= image_tag("no-image.png") %>
    <% end %>
  </div>
  <p class="main__user__top__name">名前<br/><%= @user.name %></p>
  <p class="main__user__top__profile">プロフィール<br/><%= @user.profile %></p>
  <%= render 'follow_form' %>
  <%= render 'stats' %>
</div>
<% end %>


<div class="main__word">
  <h2><%= fa_icon("book") %>word memory</h2>
  <%= render partial: "words/my-index", locals: { word: @word }%>
</div>

<%= render 'link/word'%>