<h1>Word一覧</h1>
<%= link_to '新規登録', new_word_path, class: 'btn btn-primary' %>

<div class="mb-3">
<table id="table", class="table-hover">
  <thead class="thead-default">
    <tr>
      <th>Word.human_attribute_name(:name)</th>
      <th>Word.human_attribute_name(:created_at)</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= link_to word.name, word_path(word) %></td>
        <td><%= word.created_at %></td>
        <td><%= link_to '編集', edit_word_path(word), class: 'btn btn-parimary mr-3' %></td>
        <td><%= link_to '削除', word, method: :delete, data:{ confirm: "タスク「#{word.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
