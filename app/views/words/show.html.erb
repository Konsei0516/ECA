<%= render 'link/header'%>
<div class="main__index">
  <h2>＜ーーWord 詳細ーー＞</h2>
</div>

<div class="word__main">
  <div class ="word__main__box">
  <%= link_to '一覧', words_path, class: 'nav-link' %>
    <div class="word__wrapper__card">
      <div class= "word__wrapper__card__title">
        <%= link_to @word.name, word_path(@word) %>
      </div>
      <div class="word__wrapper__card__description">
        <%= link_to @word.description, word_path(@word) %>
      </div>
      <div class="word__wrapper__card__name">
        <%= link_to @word.user.name %>
      </div>
      <div id="likes_buttons_<%= @word.id %>">
        <%= render partial: 'likes/like', locals: { word: @word, likes: @likes} %>
      </div>
    <% if current_user == @user %>
    <div class ="word__wrapper__card__btn">
      <%= link_to "編集", edit_word_path, class: "btn btn-primary" %>
      <%= link_to '削除', @word, method: :delete, data:{ confirm: "タスク「#{@word.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
    </div>
    <% end %>
  </div>

  <div class="comments">
    <h4>コメント一覧</h4>
    <% if @comments %>
      <% @comments.each do |comment| %>
        <div class="comments__text" data-comment-id= "<%= comment.id %>">
          <p>
            <strong><%= link_to comment.user.name, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
            <% if user_signed_in? && comment.user_id == current_user.id %>
              <%= link_to "削除", class: "comment-destroy" do %>
                <%= fa_icon("times-circle") %>
              <% end %>
            <% end %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="container"> 
    <% if current_user %>
      <%= form_tag("/words/#{@word.id}/comments", method: :post, id: "new_comment") do %>
        <textarea cols="30" name="text" placeholder="コメントする" rows="2" class="form__textbox"></textarea>
        <input type="submit" value="SENT" class="form__submit">
      <% end %>
    <% end %>
  </div>
</div>
