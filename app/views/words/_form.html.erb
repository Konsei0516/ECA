<%= form_with model: @word, local: true do |f| %>
<div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', id: 'word_name' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5,class: 'form-control', id: 'word_description' %>
  </div>
</div>
<%= f.submit nil, class: 'btn btn-primary' %>
<% end %>