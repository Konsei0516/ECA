<%= render 'link/header'%>
<div id="show_user" data-show_user="<%= current_user.id %>"></div>
<div class="chat">
  <div class="chat_box">
    <a type="button" onclick="test();" class="scroll_bottom"><span class="scroll-down">Scroll</span></a>
    <%= render @messages %>
    <div id="messages"></div>
  </div>
</div>
<footer class="form">  
  <div class="input">
    <%= text_field nil, nil, 'data-behavior': 'room_speaker', class: 'center-block',placeholder: "English only" %>
    <%= button_tag '送信', class: 'chat_submit' %>
  </div>
</footer>