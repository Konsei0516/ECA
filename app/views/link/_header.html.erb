<header class="header">
  <div class="container row">
    <% if user_signed_in? %>
      <ul class="header__list">
        <li class="header__users"><i class="material-icons">perm_identity</i><%= link_to "ユーザー一覧", users_path, class:"header__word" %></li>
        <li class="header__new"><i class="material-icons">create</i><%= link_to "新規投稿", new_word_path, class:"header__word" %></li>
        <li><%= link_to "English together", root_path, class: 'header__title' %></li>
        <li class="header__contents"><i class="material-icons">directions_run</i><%= link_to "ログアウト", destroy_user_session_path, method: :delete , class:"header__word"%></li>
        <li class= "header__name"><%= link_to current_user.name, user_path(current_user), class:"header__word"%></li>
      </ul>
    <% else %>
      <div class="grid-6">
        <ul class="header__list">
          <li><%= link_to "English together", root_path, class: 'header__title' %></li>
          <li class="header__contents"><%= fa_icon("sign-out")%><%= link_to "ログイン", new_user_session_path, class:"header__word" %></li>
          <li class="header__name"><%= link_to "新規登録", new_user_registration_path, class:"header__word"  %></li>
        </ul>
      </div>
    <% end %>
  <div id="nav-container">
    <div class="bg"></div>
    <div class="button" tabindex="0">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </div>
  <div id="nav-content" tabindex="0">
    <ul>
      <li><a class="post" href="/">Home</a></li>
      <li><a class="post" href="/home/about">about</a></li>
      <li><a class="post" href="/rooms/show">ChatRoom</a></li>
      <li><%= link_to '投稿一覧', words_path, class: 'post' %></li>
    </ul>
  </div>
  <%= render 'layouts/notifications' %>
  </div>
</header>